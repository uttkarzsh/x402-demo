{
  "compilerOptions": {
    // Input and output directories
    "rootDir": "./src",
    "outDir": "./dist",

    // Target modern JS and use CommonJS for Node
    "target": "ES2020",
    "module": "NodeNext",

    // Enable NodeJS-specific globals (like __dirname)
    "lib": ["ES2020"],
    "types": ["node"],

    // Strict type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Allow default imports from CommonJS
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Generate helpful source maps for debugging
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Skip library type checking for faster builds
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}